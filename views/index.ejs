    <%- include('partials/Navbar.ejs') %>
    <div class="container-fluid h-100 d-flex flex-column justify-content-center align-items-center">
      <table class="table table-hover table-striped table-bordered border-dark mt-4" style="min-height: 480px;">
      <caption>List of employees</caption>
        <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Full Name</th>
              <th scope="col">Job Title</th>
              <th scope="col">Phone No.</th>
              <th scope="col">E-mail</th>
              <th scope="col">Address</th>
              <th scope="col">City</th>
              <th scope="col">State</th>
              <th scope="col">Primary Contact</th>
              <th scope="col">Primary Contact No.</th>
              <th scope="col">Relationship</th>
              <th scope="col">Secondary Contact</th>
              <th scope="col">Secondary Contact No.</th>
              <th scope="col">Relationship</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% if (empData.length !== 0) { %>
                <% empData.forEach(function(data, index) { %>
                  <tr>
                    <th scope="row"><%= data.id %></th>
                    <td><%= data.full_name %></td>
                    <td><%= data.job_title %></td>
                    <td><%= data.phone_no %></td>
                    <td><%= data.email %></td>
                    <td><%= data.address %></td>
                    <td><%= data.city %></td>
                    <td><%= data.state %></td>
                    <td><%= data.primary_emergency_contact %></td>
                    <td><%= data.primary_contact_no %></td>
                    <td><%= data.primary_relationship %></td>
                    <td><%= data.secondary_emergency_contact %></td>
                    <td><%= data.secondary_contact_no %></td>
                    <td><%= data.secondary_relationship %></td>
                    <td class="text-center"><a href="/updateemployee?id=<%= data.id %>"><i class="fa-solid fa-pen text-primary" role="button"></i></a></td>
                    <td class="text-center"><a href="/api/delete?id=<%= data.id %>"><i class="fa-solid fa-trash text-danger" role="button"></i></a></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="7">No Data Found</td>
                </tr>
              <% } %>
          </tbody>
    </table>
    <div class="pagination ">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/0d8267aa10.js" crossorigin="anonymous"></script>
  </body>
</html>